{
    "name": "laravel/laravel",
    "type": "project",
    "description": "The skeleton application for the Laravel framework.",
    "keywords": ["laravel", "framework"],
    "license": "MIT",
    "require": {
        "php": "^8.1",
        "darkaonline/l5-swagger": "^8.6",
        "filament/filament": "^3.2",
        "filament/spatie-laravel-translatable-plugin": "^3.2",
        "guzzlehttp/guzzle": "^7.2",
        "laravel/framework": "^10.10",
        "laravel/sanctum": "^3.3",
        "laravel/tinker": "^2.8",
        "livewire/livewire": "^3.5",
        "propaganistas/laravel-phone": "^5.3",
        "spatie/laravel-data": "^4.6",
        "spatie/laravel-sitemap": "^7.2"
    },
    "require-dev": {
        "barryvdh/laravel-ide-helper": "^3.0",
        "devizzent/cebe-php-openapi": "^1.0",
        "fakerphp/faker": "^1.9.1",
        "larastan/larastan": "^2.9",
        "laravel/pint": "^1.0",
        "laravel/sail": "^1.18",
        "mockery/mockery": "^1.4.4",
        "nunomaduro/collision": "^7.0",
        "phpunit/phpunit": "^10.1",
        "spatie/laravel-ignition": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/",
            "Database\\Factories\\": "database/factories/",
            "Database\\Seeders\\": "database/seeders/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "scripts": {
        "post-autoload-dump": [
            "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
            "@php artisan package:discover --ansi",
            "@php artisan filament:upgrade"
        ],
        "post-update-cmd": [
            "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
        ],
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-create-project-cmd": [
            "@php artisan key:generate --ansi"
        ],
        "baseline": "vendor/bin/phpstan --generate-baseline",
        "ft": [
            "@ide-helper",
            "@pint",
            "@test:openapi",
            "@test:pint",
            "@test:phpstan",
            "@test:phpunit"
        ],
        "ide-helper": [
            "@php artisan clear-compiled",
            "@php artisan ide-helper:generate",
            "@php artisan ide-helper:meta",
            "@php artisan ide-helper:models --reset --write"
        ],
        "pint": "vendor/bin/pint",
        "test:openapi": [
            "php artisan l5-swagger:generate",
            "vendor/bin/php-openapi validate storage/api-docs/api-docs.json"
        ],
        "test:phpstan": "vendor/bin/phpstan analyse",
        "test:phpunit": "php artisan test",
        "test:phpunit-coverage": "php -d xdebug.mode=coverage artisan test --coverage",
        "test:pint": "vendor/bin/pint --test"
    },
    "scripts-descriptions": {
        "baseline": "Generate baseline for PHPStan",
        "ft": "Fix and Test",
        "pint": "Run Laravel Pint (PHP-CS-Fixer)",
        "test:openapi": "Run php-openapi validator",
        "test:phpstan": "Run PHPStan",
        "test:phpunit": "Run PHPUnit",
        "test:pint": "Run Laravel Pint test"
    },
    "extra": {
        "laravel": {
            "dont-discover": []
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "php-http/discovery": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
